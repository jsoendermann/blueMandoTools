!!! 5
%html
  %head
    %title The Blue Mandarin Lab - Card Generator

    %link{:rel => "stylesheet", :type => "text/css", :href => "/assets/bootstrap/bootstrap.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "/assets/mcds.css"}

    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"}
    %script{:src => "/assets/shared.js"}
    %script{:src => "/assets/bootstrap/bootstrap.js"}
    %script{:src => "/assets/vocab.js"}
    %script{:src => "/assets/sentences.js"}
    %script{:src => "/assets/mcds.js"}
    %script{:src => "/assets/mcds-dict.js"}


  %body(style="padding-top: 60px;")
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          .span8.offset2
            %ul.nav
              -# active is set when files are loaded by the server
              %li#vocab-link
                -# TODO Find a better solution for this css hack
                %a(href="/vocab/" style="padding-left: 0;") Vocab Cards
              %li#sentences-link
                %a{:href => "/sentences/"} Sentence Cards
              %li#mcds-link
                %a{:href => "/mcds/"} MCDs
              %li#settings-help-link
                %a{:href => "/settings-help/"}
                  :plain
                    Help & Settings
              %li#about-link
                %a{:href => "/about/"} About


    .container
      .span8.offset2
        {{{content}}}
